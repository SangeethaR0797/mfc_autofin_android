<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/g_white"
    android:orientation="vertical"
    tools:context=".Activity.VehicleDetailsActivities.VehPostInspectionActivity">

    <include layout="@layout/vehicle_details_app_bar" />

    <androidx.cardview.widget.CardView
        style="@style/veh_details_card_view_1style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/text_size10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvGivenVehLoan"
                        style="@style/VehDetails_PreviousData_Style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/text_size_19dp"
                        android:text="@string/vehicle_have_loan_qn" />

                    <utility.RobotoMedium
                        android:id="@+id/tvGivenVehLoanVal"
                        style="@style/veh_details_previous_data_val_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/testing_string" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_green_tick"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_size25dp"
                    android:layout_marginRight="@dimen/text_size_21dp"
                    android:layout_weight="0.2"
                    app:srcCompat="@drawable/ic_baseline_ac_unit_24" />

            </LinearLayout>

            <View
                style="@style/view_style"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <utility.RobotoMedium
                android:id="@+id/tvGivenVehLoanEdit"
                style="@style/edit_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_size10dp"
        android:layout_marginTop="@dimen/text_size_8dp"
        android:layout_marginRight="@dimen/text_size10dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <utility.RobotoMedium
                android:id="@+id/tvVehValuationPostInspLbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_size_20dp"
                android:layout_marginTop="@dimen/text_size_30dp"
                android:layout_marginBottom="@dimen/text_size_28dp"
                android:text="@string/vehicle_valuation_post_inspection"
                android:textColor="@color/very_dark_blue"
                android:textSize="@dimen/text_size_16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_size11dp"
                android:layout_marginRight="@dimen/text_size10dp"
                android:layout_marginBottom="@dimen/text_size_31dp"
                android:orientation="horizontal"
                android:weightSum="2">

                <Button
                    android:id="@+id/btnVehPostInspectionYes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/grey_box_1dp"
                    android:text="@string/yes"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />

                <Button
                    android:id="@+id/btnVehPostInspectionNo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_size10dp"
                    android:layout_weight="1"
                    android:background="@drawable/grey_box_1dp"
                    android:text="@string/no"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_size_16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llVehPostInspection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_size10dp"
                android:layout_marginRight="@dimen/text_size10dp"
                android:layout_marginBottom="@dimen/text_size_17dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvPostInspectionAmountLbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/text_size_5dp"
                    android:text="@string/lbl_enter_amount"
                    android:textColor="@color/grey_color"
                    android:textSize="@dimen/text_size_16sp" />

                <EditText
                    android:id="@+id/etPostInspectionAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/testing_string"
                    android:textColor="@color/very_dark_blue"
                    android:textSize="@dimen/text_size_16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/text_size_8dp"
                    android:background="@color/very_dark_blue" />
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>