<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vtwo_pale_grey"
    android:orientation="vertical"
    tools:context="v2.view.DocumentUploadFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_size_28dp"
        android:orientation="vertical">

        <include layout="@layout/soft_offer_action_bar" />
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        tools:ignore="ScrollViewCount">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="13dp"
                android:layout_marginLeft="13dp"
                android:layout_marginBottom="@dimen/text_size_28dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/v2_doc_upload_heading1"
                    android:textAppearance="@style/RobotoRegular"
                    android:textColor="@color/grey_color"
                    android:textSize="@dimen/text_size_12dp">

                </TextView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="JPEG,PNG,BMP,PDF,RAR,ZIP"
                    android:textAppearance="@style/RobotoRegular"
                    android:textColor="@color/grey_color"
                    android:textSize="@dimen/text_size_12dp">

                </TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayoutImageUpload"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_size_11dp"
                android:layout_marginRight="@dimen/text_size_11dp"
                android:orientation="vertical">

            </LinearLayout>


            <Button
                android:id="@+id/buttonUploadDocument"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="36dp"
                android:background="@drawable/vtwo_next_btn_bg"
                android:paddingLeft="83dp"
                android:paddingTop="13dp"
                android:paddingRight="83dp"
                android:paddingBottom="13dp"
                android:text="NEXT"
                android:textAppearance="@style/RobotoMedium"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_16sp" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>