<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/text_size_8dp"
        android:animateLayoutChanges="true"
        android:orientation="horizontal"
        android:paddingTop="@dimen/text_size_15dp">

        <ImageView
            android:id="@+id/iv_icon"
            android:layout_width="@dimen/text_size_8dp"
            android:layout_height="@dimen/text_size_8dp"

            android:layout_marginTop="@dimen/text_size_5dp"
            android:layout_marginBottom="@dimen/text_size_8dp"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/ic_small_black_circle" />

        <LinearLayout
            android:id="@+id/ll_text_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_size_8dp"


            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_item"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="1"
                android:textAppearance="@style/RobotoMedium"
                android:textColor="@color/vtwo_black"
                android:textSize="@dimen/text_size_14sp"
                tools:text="Thor Odinson's Loan Has been disbursed" />

            <TextView
                android:id="@+id/tv_item_small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="end"
                android:maxLines="2"
                android:textAppearance="@style/RobotoRegular"
                android:textColor="@color/vtwo_light_grey"
                android:textSize="@dimen/text_size10dp"
                android:textStyle="italic"
                tools:text="Congratulations! the loan for Thor Odinson, LOS ID : 2254 for HONDA CIVIC 1.8 VX AT has been disbursed by HDFC. Congratulations! the loan for Thor Odinson, LOS ID : 2254 for HONDA CIVIC 1.8 VX AT has been disbursed by HDFC." />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_show_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="@dimen/text_size_12dp"
        android:background="@drawable/vtwo_input_bg"
        android:paddingLeft="@dimen/text_size_16sp"
        android:paddingTop="@dimen/text_size_5dp"
        android:paddingRight="@dimen/text_size_16sp"
        android:paddingBottom="@dimen/text_size_5dp"
        android:text="@string/more"
        android:textAppearance="@style/RobotoBold"
        android:textColor="@color/vtwo_black"
        android:textSize="@dimen/text_size_12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/view_height_1dp"


        android:background="@color/v2_grey" />
</LinearLayout>