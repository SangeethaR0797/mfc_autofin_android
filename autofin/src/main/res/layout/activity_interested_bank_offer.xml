<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_common_app_bar" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_size_19dp"
                android:layout_marginTop="52dp"
                android:layout_marginRight="@dimen/text_size_17dp"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_tick"
                    android:layout_width="61dp"
                    android:layout_height="61dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="@dimen/text_size_18dp"
                    app:srcCompat="@drawable/ic_green_tick" />

                <utility.RobotoMedium
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/hi_lbl"
                    android:textColor="@color/very_dark_blue"
                    android:textSize="@dimen/text_size_16sp" />

                <utility.RobotoMedium
                    android:id="@+id/tv_hi_cname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/hi_lbl"
                    android:textColor="@color/very_dark_blue"
                    android:textSize="@dimen/text_size_16sp" />

                <TextView
                    android:id="@+id/tvUpdateLbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/update_lbl"
                    android:textColor="@color/grey_color"
                    android:textSize="@dimen/text_size_14sp"
                    android:layout_marginBottom="3dp"/>

                <TextView
                    android:id="@+id/tvInterestedBankOfferCaseId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/update_lbl"
                    android:textColor="@color/grey_color"
                    android:textSize="@dimen/text_size_14sp"
                    android:layout_marginBottom="56dp"/>

                <TextView
                    android:id="@+id/tvNextlbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:text="@string/next_lbl"
                    android:textColor="@color/grey_color"
                    android:textSize="@dimen/text_size_14sp"
                    android:layout_marginBottom="@dimen/text_size_12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_baseline_brightness_1_24" />

                    <utility.RobotoMedium
                    android:id="@+id/tv_will_contact_you_lbl"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_size11dp"
                    android:text="@string/will_contact_lbl"
                    android:textColor="@color/very_dark_blue"
                    android:textSize="@dimen/text_size_14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_baseline_brightness_1_24" />

                    <utility.RobotoMedium
                        android:id="@+id/tv_check_list_2_lbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size11dp"
                        android:text="@string/will_contact_lbl"
                        android:textColor="@color/very_dark_blue"
                        android:textSize="@dimen/text_size_14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        app:srcCompat="@drawable/ic_baseline_brightness_1_24" />

                    <utility.RobotoMedium
                        android:id="@+id/tv_check_list_3_lbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size11dp"
                        android:text="@string/will_contact_lbl"
                        android:textColor="@color/very_dark_blue"
                        android:textSize="@dimen/text_size_14sp" />
                </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingLeft="@dimen/text_size_20dp"
    android:paddingRight="@dimen/text_size_30dp"
    android:layout_marginTop="69dp"
    android:layout_marginBottom="@dimen/text_size_45dp"
    android:background="@color/g_white">

    <TextView
        android:id="@+id/tvKYCLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/kyc_not_updated_lbl"
        android:textColor="@color/very_dark_blue"
        android:textSize="@dimen/text_size_16sp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="12dp"/>
    <TextView
        android:id="@+id/tvLbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:text="@string/kyc_not_updated_lbl"
        android:textColor="@color/very_dark_blue"
        android:textSize="@dimen/text_size_16sp"
        android:layout_marginTop="23dp"
        android:layout_marginBottom="@dimen/text_size_20dp"/>
    <Button
        android:id="@+id/btnUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/update_lbl"
        android:background="@drawable/navy_blue_outline"
        android:layout_marginBottom="@dimen/text_size_17dp"
        android:textColor="@color/navy_blue"
        android:paddingRight="71dp"
        android:paddingLeft="71dp"/>

</LinearLayout>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <Button
        android:id="@+id/btnTrackLoan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/navy_blue"
        android:paddingTop="@dimen/text_size_19dp"
        android:paddingBottom="@dimen/text_size_18dp"
        android:text="@string/track_my_loan_text"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:textSize="@dimen/text_size_16sp" />
</RelativeLayout>