<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.VehicleDetailsActivities.VehicleOwnerActivity">

    <include layout="@layout/vehicle_details_app_bar" />

    <androidx.cardview.widget.CardView
        style="@style/veh_details_card_view_1style"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="@dimen/text_size10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.8"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tvGivenVehVariant"
                        style="@style/VehDetails_PreviousData_Style"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/text_size_19dp"
                        android:text="@string/lbl_veh_variant" />

                    <utility.RobotoMedium
                        android:id="@+id/tvGivenVehVariantVal"
                        style="@style/veh_details_previous_data_val_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/testing_string" />
                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_green_tick"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_size25dp"
                    android:layout_marginRight="@dimen/text_size_21dp"
                    android:layout_weight="0.2"
                    app:srcCompat="@drawable/ic_baseline_ac_unit_24" />

            </LinearLayout>

            <View
                style="@style/view_style"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

            <utility.RobotoMedium
                android:id="@+id/tvGivenVehVariantEdit"
                style="@style/edit_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        style="@style/veh_details_card_view_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <utility.RobotoMedium
                android:id="@+id/tvVehOwnershipLbl"
                style="@style/select_lbl_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lbl_veh_ownership" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_size_15dp"
                android:layout_marginTop="@dimen/text_size_33dp"
                android:layout_marginRight="@dimen/text_size_44dp"
                android:layout_marginBottom="@dimen/text_size_41dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <RadioButton
                        android:id="@+id/radioBtn01"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="false"
                        android:paddingLeft="@dimen/text_size_12dp"
                        android:text="@string/ownership_01"
                        android:textColor="@color/very_dark_blue"
                        android:textSize="@dimen/text_size_16sp" />

                    <RadioButton
                        android:id="@+id/radioBtn02"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="false"
                        android:paddingLeft="@dimen/text_size_12dp"
                        android:text="@string/ownership_02"
                        android:textColor="@color/very_dark_blue"
                        android:textSize="@dimen/text_size_16sp" />

                    <RadioButton
                        android:id="@+id/radioBtn03"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="false"
                        android:paddingLeft="@dimen/text_size_12dp"
                        android:text="@string/ownership_03"
                        android:textColor="@color/very_dark_blue"
                        android:textSize="@dimen/text_size_16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/text_size_24dp"
                    android:orientation="horizontal"
                    android:weightSum="3">

                    <RadioButton
                        android:id="@+id/radioBtn04"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="false"
                        android:paddingLeft="@dimen/text_size_12dp"
                        android:text="@string/ownership_04"
                        android:textColor="@color/very_dark_blue"
                        android:textSize="@dimen/text_size_16sp" />

                    <RadioButton
                        android:id="@+id/radioBtn05"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="false"
                        android:paddingLeft="@dimen/text_size_12dp"
                        android:text="@string/ownership_05"
                        android:textColor="@color/very_dark_blue"
                        android:textSize="@dimen/text_size_16sp" />

                    <RadioButton
                        android:id="@+id/radioBtn0"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:checked="false"
                        android:paddingLeft="@dimen/text_size_12dp"
                        android:text="@string/ownership_03"
                        android:textColor="@color/very_dark_blue"
                        android:textSize="@dimen/text_size_16sp"
                        android:visibility="invisible" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>