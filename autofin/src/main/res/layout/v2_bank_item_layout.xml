<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/v2_soft_offer_bank_item_bg"
    android:layout_marginBottom="@dimen/text_size_20dp"
    android:paddingLeft="@dimen/text_size10dp"
    android:paddingRight="10dp"
    android:paddingStart="@dimen/text_size10dp"
    android:paddingEnd="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="@dimen/text_size_20dp"
        android:paddingTop="@dimen/text_size_17dp"
        android:paddingRight="@dimen/text_size_20dp"
        android:paddingBottom="@dimen/text_size_17dp">
        <!--Bank Image Layout-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_size_14dp"
            android:orientation="horizontal"
            android:weightSum="1">

            <ImageView
                android:id="@+id/ivBankName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:foregroundGravity="left"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/tvBankStatusV2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="left"
                android:text="@string/v2_recommended"
                android:textAllCaps="false"
                android:textAppearance="@style/RobotoRegular"
                android:textColor="@color/vtwo_yellow"
                android:textSize="@dimen/text_size_14sp"
                android:textStyle="italic" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/text_size_14dp"
            android:paddingBottom="@dimen/text_size_19dp"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6">

                <TextView
                    android:id="@+id/tvLoanAmountV2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/v2_max_loan_amount"
                    android:textAppearance="@style/RobotoRegular"
                    android:textColor="@color/grey_color"
                    android:textSize="@dimen/text_size_12dp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tvLoanAmountValV2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvLoanAmountV2"
                    android:layout_marginTop="3dp"
                    android:text="@string/rupees_symbol"
                    android:textAppearance="@style/RobotoMedium"
                    android:textColor="@color/vtwo_black"
                    android:textSize="@dimen/text_size_16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4">

                <TextView
                    android:id="@+id/tvRateOfInterestV2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/v2_rate_of_interest"
                    android:textAppearance="@style/RobotoRegular"
                    android:textColor="@color/grey_color"
                    android:textSize="@dimen/text_size_12dp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tvROIValV2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvRateOfInterestV2"
                    android:layout_marginTop="3dp"
                    android:text="0.0%"
                    android:textAppearance="@style/RobotoMedium"
                    android:textColor="@color/vtwo_black"
                    android:textSize="@dimen/text_size_16sp" />
            </RelativeLayout>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="@dimen/text_size_14dp"
            android:paddingBottom="@dimen/text_size_24dp"
            android:weightSum="1">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.6">

                <TextView
                    android:id="@+id/tvEMILblV2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/v2_emi"
                    android:textAppearance="@style/RobotoRegular"
                    android:textColor="@color/grey_color"
                    android:textSize="@dimen/text_size_12dp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tvEMIValV2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvEMILblV2"
                    android:layout_marginTop="3dp"
                    android:text="@string/rupees_symbol"
                    android:textAppearance="@style/RobotoMedium"
                    android:textColor="@color/very_dark_blue"
                    android:textSize="@dimen/text_size_16sp" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4">

                <TextView
                    android:id="@+id/tvTenureLblV2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/v2_tenure"
                    android:textAppearance="@style/RobotoRegular"
                    android:textColor="@color/grey_color"
                    android:textSize="@dimen/text_size_12dp"
                    android:textStyle="italic" />

                <TextView
                    android:id="@+id/tvTenureValV2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tvTenureLblV2"
                    android:layout_marginTop="3dp"
                    android:text="0 MONTHS"
                    android:textAppearance="@style/RobotoMedium"
                    android:textColor="@color/very_dark_blue"
                    android:textSize="@dimen/text_size_16sp" />
            </RelativeLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textViewProcessingFeeV2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_size_15dp"
            android:text="@string/v2_processing_fee"
            android:textAppearance="@style/RobotoRegular"
            android:paddingRight="@dimen/text_size10dp"
            android:textColor="@color/grey_color"
            android:textSize="@dimen/text_size_12dp"
            android:textStyle="italic" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/v2_grey" />

        <TextView
            android:id="@+id/tvApplyNow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/text_size_16sp"
            android:drawablePadding="@dimen/text_size10dp"
            android:gravity="center"
            android:text="@string/lbl_apply_now"
            android:textAppearance="@style/RobotoMedium"
            android:textColor="@color/v2_dark_blue"
            android:textSize="@dimen/text_size_16sp"
            app:drawableRightCompat="@drawable/ic_forward_arrow" />
    </LinearLayout>
</androidx.cardview.widget.CardView>