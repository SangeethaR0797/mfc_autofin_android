<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_root"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_size_20dp"
        android:layout_marginLeft="@dimen/text_size_20dp"
        android:layout_marginTop="@dimen/text_size_20dp"
        android:layout_marginBottom="@dimen/text_size_20dp"
        android:background="@color/white"

        app:cardCornerRadius="@dimen/text_size_8dp">

        <LinearLayout
            android:id="@+id/ll_main_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"


            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/text_size_30dp">

            <ImageView
                android:id="@+id/iv_icon"
                android:layout_width="140dp"
                android:layout_height="@dimen/text_size_30dp"
                android:scaleType="fitXY"
                tools:srcCompat="@drawable/ic_hdfc" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/text_size_30dp"

                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    app:srcCompat="@drawable/ic_offer_icon" />

                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_size10dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_rate_of_intrest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="@style/RobotoMedium"
                        android:textColor="@color/vtwo_black"
                        android:textSize="@dimen/text_size_16sp"
                        tools:text="8.25%" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rate_of_intrest"
                        android:textAppearance="@style/RobotoRegular"
                        android:textColor="@color/grey_color"
                        android:textSize="@dimen/text_size_12dp"
                        android:textStyle="italic" />

                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/tv_know_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/text_size_22dp"

                android:text="@string/know_more"
                android:textAppearance="@style/RobotoMedium"
                android:textColor="#0261ff"
                android:textSize="@dimen/text_size_14sp" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</RelativeLayout>