<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_common_app_bar" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size10dp"
            android:layout_marginRight="@dimen/text_size10dp"
            android:layout_marginLeft="@dimen/text_size10dp"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/text_size_20dp"
                android:layout_marginLeft="@dimen/text_size_20dp"
                android:layout_marginRight="@dimen/text_size_21dp">
            <utility.RobotoMedium
                android:id="@+id/tvReferenceLbl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/lbl_reference_name"
                android:textColor="@color/very_dark_blue"
                android:textSize="@dimen/text_size_16sp"
                android:layout_marginTop="@dimen/text_size_30dp"
                android:layout_marginBottom="@dimen/text_size_8dp" />
                <TextView
                   android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/text_size40dp"/>
                <LinearLayout
                    android:id="@+id/llRFirstName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                    android:id="@+id/tvRFirstNameLbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/first_name"
                    android:textColor="@color/grey_color"
                    android:textSize="@dimen/text_size_14sp"
                    android:layout_marginBottom="@dimen/text_size_5dp"/>
                    <EditText
                        android:id="@+id/etRFirstName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:textSize="@dimen/text_size_16sp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/very_dark_blue"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/very_dark_blue"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="@dimen/text_size_24dp"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llRLastName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/text_size_24dp">
                    <TextView
                        android:id="@+id/tvLastNameLbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/last_name"
                        android:textColor="@color/grey_color"
                        android:textSize="@dimen/text_size_14sp"
                        android:layout_marginBottom="@dimen/text_size_5dp"/>
                    <EditText
                        android:id="@+id/etRLastName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:textSize="@dimen/text_size_16sp"
                        android:inputType="text"
                        android:maxLines="1"
                        android:textColor="@color/very_dark_blue"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/very_dark_blue"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llRPhoneNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="@dimen/text_size_24dp">
                    <TextView
                        android:id="@+id/tvPhoneNoLbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_phone_no"
                        android:textColor="@color/grey_color"
                        android:textSize="@dimen/text_size_14sp"
                        android:layout_marginBottom="@dimen/text_size_5dp"/>
                    <EditText
                        android:id="@+id/etRPhoneNo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:inputType="number"
                        android:maxLength="10"
                        android:maxLines="1"
                        android:textSize="@dimen/text_size_16sp"
                        android:textColor="@color/very_dark_blue"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/very_dark_blue"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/llREmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="120dp">
                    <TextView
                        android:id="@+id/tvREmailLbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/lbl_email"
                        android:textColor="@color/grey_color"
                        android:textSize="@dimen/text_size_14sp"
                        android:layout_marginBottom="@dimen/text_size_5dp"/>
                    <EditText
                        android:id="@+id/etREmail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:textSize="@dimen/text_size_16sp"
                        android:inputType="textEmailAddress"
                        android:maxLines="1"
                        android:textColor="@color/very_dark_blue"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/very_dark_blue"/>
                </LinearLayout>
            </LinearLayout>
                   </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">
        <include layout="@layout/autofin_next_btn" />
    </LinearLayout>
</RelativeLayout>