<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/checkBoxEquiFaxAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/text_size_17dp"
        android:drawablePadding="13dp"
        android:text="Address 1, Address 2, Address 3, Address 4"
        android:textAppearance="@style/RobotoRegular"
        android:textColor="@color/vtwo_black"
        android:textSize="@dimen/text_size_14sp"
        android:textStyle="italic" />

    <LinearLayout
        android:id="@+id/linearLayoutIsPermanentAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_size_30dp"
        android:layout_marginTop="@dimen/text_size_22dp"
        android:gravity="start"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/text_size_30dp">

        <CheckBox
            android:id="@+id/checkboxIsPermanentAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/text_size_17dp"
            android:drawablePadding="7dp"
            android:text="@string/v2_this_is_also_my_permanent_address"
            android:textColor="@color/vtwo_black"
            android:textSize="12sp" />

        <Button
            android:id="@+id/buttonPermanentAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/vtwo_next_btn_bg"
            android:paddingLeft="80dp"
            android:paddingTop="13dp"
            android:paddingRight="80dp"
            android:paddingBottom="13dp"
            android:text="@string/next"
            android:textAppearance="@color/vtwo_black"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/v2_grey" />


</LinearLayout>