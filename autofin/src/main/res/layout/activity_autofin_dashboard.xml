<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/autofin_g_white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/llAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <include layout="@layout/autofin_action_bar" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_size10dp"
            android:layout_marginTop="@dimen/text_size10dp"
            android:layout_marginRight="@dimen/text_size10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/llTotalLeads"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/autofin_tab_shadow"
                android:orientation="horizontal"
                android:weightSum="2">

                <utility.RobotoMedium
                    android:id="@+id/tvTotalLeadsCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:paddingTop="@dimen/text_size_20dp"
                    android:paddingBottom="@dimen/text_size_20dp"
                    android:text="@string/testing_number"
                    android:textColor="@color/autofin_very_dark_blue"
                    android:textSize="@dimen/text_size_30dp"
                    tools:ignore="NestedWeights" />

                <utility.RobotoMedium
                    android:id="@+id/tvTotalLeadsLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:paddingLeft="@dimen/text_size10dp"
                    android:paddingTop="@dimen/text_size_30dp"
                    android:paddingBottom="@dimen/text_size_26dp"
                    android:text="@string/lbl_total_leads"
                    android:textColor="@color/autofin_very_dark_blue"
                    android:textSize="@dimen/text_size_16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llOpenLeads"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_size10dp"
                android:layout_weight="1"
                android:background="@drawable/autofin_tab_shadow"
                android:orientation="horizontal"
                android:weightSum="2">

                <utility.RobotoMedium
                    android:id="@+id/tvOpenLeadsCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:paddingLeft="@dimen/text_size11dp"
                    android:paddingTop="@dimen/text_size_20dp"
                    android:paddingBottom="@dimen/text_size_20dp"
                    android:text="@string/testing_number"
                    android:textColor="@color/autofin_very_dark_blue"
                    android:textSize="@dimen/text_size_30dp" />

                <utility.RobotoMedium
                    android:id="@+id/tvOpenLeadsLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:paddingLeft="@dimen/text_size10dp"
                    android:paddingTop="@dimen/text_size_30dp"
                    android:paddingBottom="@dimen/text_size_26dp"
                    android:text="@string/lbl_open_leads"
                    android:textColor="@color/autofin_very_dark_blue"
                    android:textSize="@dimen/text_size_16sp" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_size10dp"
            android:layout_marginTop="@dimen/text_size11dp"
            android:layout_marginRight="@dimen/text_size10dp"
            android:orientation="horizontal"
            android:weightSum="2">

            <LinearLayout
                android:id="@+id/llBankLeads"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/autofin_tab_shadow"
                android:orientation="horizontal"
                android:weightSum="2">

                <utility.RobotoMedium
                    android:id="@+id/tvBankLeadsCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:paddingTop="@dimen/text_size_20dp"
                    android:paddingBottom="@dimen/text_size_20dp"
                    android:text="@string/testing_number"
                    android:textColor="@color/autofin_very_dark_blue"
                    android:textSize="@dimen/text_size_30dp"
                    tools:ignore="NestedWeights" />

                <utility.RobotoMedium
                    android:id="@+id/tvBankLeadsLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:paddingLeft="@dimen/text_size10dp"
                    android:paddingTop="@dimen/text_size_30dp"
                    android:paddingBottom="@dimen/text_size_26dp"
                    android:text="@string/lbl_bank_leads"
                    android:textColor="@color/autofin_very_dark_blue"
                    android:textSize="@dimen/text_size_16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/llClosedLeads"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_size10dp"
                android:layout_weight="1"
                android:background="@drawable/autofin_tab_shadow"
                android:orientation="horizontal"
                android:weightSum="2">

                <utility.RobotoMedium
                    android:id="@+id/tvClosedLeadsCount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|end"
                    android:paddingLeft="@dimen/text_size11dp"
                    android:paddingTop="@dimen/text_size_20dp"
                    android:paddingBottom="@dimen/text_size_20dp"
                    android:text="@string/testing_number"
                    android:textColor="@color/autofin_very_dark_blue"
                    android:textSize="@dimen/text_size_30dp" />

                <utility.RobotoMedium
                    android:id="@+id/tvClosedLeadsLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="start|center_vertical"
                    android:paddingLeft="@dimen/text_size10dp"
                    android:paddingTop="@dimen/text_size_30dp"
                    android:paddingBottom="@dimen/text_size_26dp"
                    android:text="@string/lbl_closed_leads"
                    android:textColor="@color/autofin_very_dark_blue"
                    android:textSize="@dimen/text_size_16sp" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tvLeadTypeLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_size_14dp"
            android:layout_marginTop="@dimen/text_size_27dp"
            android:layout_marginBottom="@dimen/text_size10dp"
            android:textColor="@color/autofin_grey_color"
            android:textSize="@dimen/text_size_14dp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/leads_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_size10dp"
            android:layout_marginRight="@dimen/text_size10dp"
            android:scrollbars="none" />
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_add_lead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="@dimen/text_size40dp"
        android:layout_marginBottom="@dimen/text_size40dp"
        android:backgroundTint="@color/autofin_navy_blue"
        app:srcCompat="@drawable/ic_baseline_add_24"
        tools:ignore="ContentDescription" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>