<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ll_main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/text_size_15dp"

    android:gravity="center"
    android:orientation="horizontal"
    android:paddingLeft="@dimen/text_size25dp"
    android:paddingTop="@dimen/text_size10dp"
    android:paddingRight="@dimen/text_size25dp"
    android:paddingBottom="@dimen/text_size10dp">

    <ImageView
        android:id="@+id/iv_icon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_size_24dp"
        android:scaleType="fitCenter"

        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/ll_text_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:textAppearance="@style/RobotoMedium"
            android:textColor="@color/vtwo_light_grey"
            android:textSize="@dimen/text_size_16sp"
            tools:text="2" />

        <TextView
            android:id="@+id/tv_item_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_size_3dp"
            android:layout_marginTop="-5dp"
            android:maxLines="1"
            android:textAppearance="@style/RobotoMedium"
            android:textColor="@color/vtwo_light_grey"
            android:textSize="@dimen/text_size10dp"
            tools:text="nd" />
    </LinearLayout>

</LinearLayout>