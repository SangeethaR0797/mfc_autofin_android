<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/white_corner"
    android:gravity="center"
    android:orientation="horizontal">

    <ProgressBar
        android:id="@+id/progressBar1"
        android:layout_width="@dimen/text_size_48dp"
        android:layout_height="@dimen/text_size_48dp"
        android:layout_centerInParent="true"
        android:indeterminateTint="@color/autofin_very_dark_blue"
        android:padding="@dimen/text_size_5dp" />

    <TextView
        android:id="@+id/tvLoadingInPB"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="10dp"
        android:text="@string/loading"
        android:textAppearance="@style/RobotoBold"
        android:textSize="@dimen/text_size_16sp"
        android:textStyle="bold" />

</LinearLayout>