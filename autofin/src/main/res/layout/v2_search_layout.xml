<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/vtwo_black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/text_size_20dp"
        android:layout_marginLeft="@dimen/text_size_20dp"
        android:layout_marginTop="@dimen/text_size25dp"
        android:layout_marginEnd="@dimen/text_size_33dp"
        android:layout_marginRight="@dimen/text_size_33dp"
        android:padding="@dimen/text_size_5dp"
        android:weightSum="1"
        android:layout_marginBottom="36dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivDashBoardBack"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.1"
            android:background="@drawable/ic_vtwo_back_arrow" />

        <utility.RobotoMedium
            android:id="@+id/tvDashBoardTitle"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/text_size10dp"
            android:text="@string/vtwo_autofin_db_title"
            android:textColor="@color/white"
            android:layout_weight="0.8"
            android:textSize="@dimen/text_size_20dp" />
        <ImageView
            android:id="@+id/ivNotification"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="0.1"
            android:background="@drawable/ic_vtwo_notification" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_size25dp"
        android:layout_marginRight="80dp"
        android:text="@string/vtwo_search_desc"
        android:textColor="@color/vtwo_grey"
        android:textStyle="italic"
        android:textSize="@dimen/text_size_11dp"/>
</LinearLayout>