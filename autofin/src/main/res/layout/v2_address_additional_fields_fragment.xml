                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size_12dp"
                        android:layout_marginRight="15dp"
                        android:layout_toEndOf="@id/personalToBankDetails"
