<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/g_white"
    tools:context=".Activity.PersonalDetails.EmploymentTypeActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/personal_details_app_bar" />

        <include layout="@layout/layout_previous_screen_values" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/text_size10dp"
            android:layout_marginTop="@dimen/text_size_8dp"
            android:layout_marginRight="@dimen/text_size10dp"
            android:background="@color/white"
            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <utility.RobotoMedium
                    android:id="@+id/tvEmpTypeLbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/text_size_20dp"
                    android:layout_marginTop="@dimen/text_size_26dp"
                    android:clickable="true"
                    android:text="@string/lbl_employment_type"
                    android:textColor="@color/very_dark_blue"
                    android:textSize="@dimen/text_size_16sp" />

                <LinearLayout
                    android:id="@+id/llEmpTypeRadioGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="23dp"
                    android:layout_marginTop="@dimen/text_size_29dp"
                    android:layout_marginBottom="@dimen/text_size_31dp"
                    android:orientation="vertical">

                    <RadioGroup
                        android:id="@+id/customEmpTypeRG"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/text_size_24dp">

                            <RadioButton
                                android:id="@+id/rbSalaried"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/very_dark_blue"
                                android:checked="false"
                                android:paddingLeft="12dp"
                                android:text="@string/lbl_salaried"
                                android:textColor="@color/very_dark_blue"
                                android:textSize="@dimen/text_size_16sp" />

                            <utility.RobotoMedium
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rbSalaried"
                                android:layout_marginLeft="@dimen/text_size_45dp"
                                android:text="@string/lbl_earn_monthly_regular_income"
                                android:textColor="@color/grey_color"
                                android:textSize="@dimen/text_size_12dp"
                                android:textStyle="italic" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/text_size_24dp">

                            <RadioButton
                                android:id="@+id/rbBusinessOwner"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/very_dark_blue"
                                android:checked="false"
                                android:paddingLeft="12dp"
                                android:text="@string/lbl_business_owner"
                                android:textColor="@color/very_dark_blue"
                                android:textSize="@dimen/text_size_16sp" />

                            <utility.RobotoMedium
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rbBusinessOwner"
                                android:layout_marginLeft="@dimen/text_size_45dp"
                                android:text="@string/lbl_runs_own_business"
                                android:textColor="@color/grey_color"
                                android:textSize="@dimen/text_size_12dp"
                                android:textStyle="italic" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/text_size_24dp">

                            <RadioButton
                                android:id="@+id/rbSelfEmployedProfessional"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/very_dark_blue"
                                android:checked="false"
                                android:paddingLeft="12dp"
                                android:text="@string/lbl_self_employed_professional"
                                android:textColor="@color/very_dark_blue"
                                android:textSize="@dimen/text_size_16sp" />

                            <utility.RobotoMedium
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rbSelfEmployedProfessional"
                                android:layout_marginLeft="@dimen/text_size_45dp"
                                android:text="@string/lbl_own_a_practice"
                                android:textColor="@color/grey_color"
                                android:textSize="@dimen/text_size_12dp"
                                android:textStyle="italic" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="@dimen/text_size_24dp">

                            <RadioButton
                                android:id="@+id/rbIndependentWorker"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:buttonTint="@color/very_dark_blue"
                                android:checked="false"
                                android:paddingLeft="12dp"
                                android:text="@string/lbl_independent_worker"
                                android:textColor="@color/very_dark_blue"
                                android:textSize="@dimen/text_size_16sp" />

                            <utility.RobotoMedium
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/rbIndependentWorker"
                                android:layout_marginLeft="@dimen/text_size_45dp"
                                android:text="@string/lbl_driver_electrician"
                                android:textColor="@color/grey_color"
                                android:textSize="@dimen/text_size_12dp"
                                android:textStyle="italic" />
                        </RelativeLayout>

                        <RadioButton
                            android:id="@+id/rbStudent"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/text_size_24dp"
                            android:buttonTint="@color/very_dark_blue"
                            android:checked="false"
                            android:paddingLeft="12dp"
                            android:text="@string/lbl_student"
                            android:textColor="@color/very_dark_blue"
                            android:textSize="@dimen/text_size_16sp" />

                        <RadioButton
                            android:id="@+id/rbRetired"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/text_size_24dp"
                            android:buttonTint="@color/very_dark_blue"
                            android:checked="false"
                            android:paddingLeft="12dp"
                            android:text="@string/lbl_retired"
                            android:textColor="@color/very_dark_blue"
                            android:textSize="@dimen/text_size_16sp" />

                        <RadioButton
                            android:id="@+id/rbHomeMaker"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="@dimen/text_size_24dp"
                            android:buttonTint="@color/very_dark_blue"
                            android:checked="false"
                            android:paddingLeft="12dp"
                            android:text="@string/lbl_home_maker"
                            android:textColor="@color/very_dark_blue"
                            android:textSize="@dimen/text_size_16sp" />

                    </RadioGroup>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</RelativeLayout>