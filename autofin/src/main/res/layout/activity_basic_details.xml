<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/g_white"
    tools:context=".Activity.BasicDetailsActivities.BasicDetailsActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/basic_details_app_bar" />

            <include layout="@layout/layout_previous_screen_values" />

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/text_size10dp"
                android:layout_marginTop="@dimen/text_size_8dp"
                android:layout_marginRight="@dimen/text_size10dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/text_size_49dp">

                    <utility.RobotoMedium
                        android:id="@+id/tvVehCategoryQn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size_21dp"
                        android:layout_marginTop="@dimen/text_size_34dp"
                        android:layout_marginRight="@dimen/text_size_19dp"
                        android:text="@string/enter_basic_details"
                        android:textColor="@color/very_dark_blue"
                        android:textSize="@dimen/text_size_16sp" />
                    <!--Name-->
                    <TextView
                        android:id="@+id/tvNameLbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size_21dp"
                        android:layout_marginTop="@dimen/text_size_57dp"
                        android:layout_marginRight="@dimen/text_size_19dp"
                        android:text="@string/lbl_name"
                        android:textColor="@color/grey_color"
                        android:textSize="@dimen/text_size_14dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size_21dp"
                        android:layout_marginTop="@dimen/text_size_5dp"
                        android:layout_marginRight="@dimen/text_size_19dp"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <Spinner
                            android:id="@+id/spSalutation"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5" />

                        <EditText
                            android:id="@+id/etName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.6"
                            android:background="@android:color/transparent"
                            android:hint="Name"
                            android:inputType="text"
                            android:maxLength="50"
                            android:singleLine="true"
                            android:textColor="@color/very_dark_blue"
                            android:textSize="@dimen/text_size_16sp" />
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/text_size_21dp"
                        android:layout_marginTop="@dimen/text_size_8dp"
                        android:layout_marginRight="@dimen/text_size_21dp"
                        android:background="@color/very_dark_blue" />
                    <!--Phone Number-->
                    <TextView
                        android:id="@+id/tvPhoneNumLbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size_21dp"
                        android:layout_marginTop="@dimen/text_size_32dp"
                        android:layout_marginRight="@dimen/text_size_19dp"
                        android:text="@string/lbl_phone_no"
                        android:textColor="@color/grey_color"
                        android:textSize="@dimen/text_size_14dp" />

                    <EditText
                        android:id="@+id/etPhoneNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size_21dp"
                        android:layout_marginTop="@dimen/text_size_5dp"
                        android:layout_marginRight="@dimen/text_size_19dp"
                        android:background="@android:color/transparent"
                        android:hint="@string/sample_phone_number"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:singleLine="true"
                        android:textColor="@color/very_dark_blue"
                        android:textSize="@dimen/text_size_16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/text_size_21dp"
                        android:layout_marginTop="@dimen/text_size_8dp"
                        android:layout_marginRight="@dimen/text_size_21dp"
                        android:background="@color/very_dark_blue" />

                    <!--Email-->

                    <TextView
                        android:id="@+id/tvEmailLbl"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size_21dp"
                        android:layout_marginTop="@dimen/text_size_32dp"
                        android:layout_marginRight="@dimen/text_size_19dp"
                        android:text="@string/lbl_email"
                        android:textColor="@color/grey_color"
                        android:textSize="@dimen/text_size_14dp" />

                    <EditText
                        android:id="@+id/etEmailId"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/text_size_21dp"
                        android:layout_marginTop="@dimen/text_size_5dp"
                        android:layout_marginRight="@dimen/text_size_19dp"
                        android:background="@android:color/transparent"
                        android:hint="@string/sample_email_id"
                        android:inputType="textEmailAddress"
                        android:maxLength="50"
                        android:singleLine="true"
                        android:textColor="@color/very_dark_blue"
                        android:textSize="@dimen/text_size_16sp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/text_size_21dp"
                        android:layout_marginTop="@dimen/text_size_8dp"
                        android:layout_marginRight="@dimen/text_size_21dp"
                        android:layout_marginBottom="@dimen/text_size_48dp"
                        android:background="@color/very_dark_blue" />


                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <include layout="@layout/autofin_next_btn" />
    </LinearLayout>

</RelativeLayout>