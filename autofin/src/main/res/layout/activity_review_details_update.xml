<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/layout_common_app_bar" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/text_size10dp"
            android:layout_marginRight="@dimen/text_size10dp"
            android:layout_marginLeft="@dimen/text_size10dp"
            android:background="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/text_size_20dp"
                android:layout_marginLeft="@dimen/text_size_20dp"
                android:layout_marginRight="@dimen/text_size_21dp">
                <utility.RobotoMedium
                    android:id="@+id/tvUpdateTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/lbl_thanks_for_updating_your_details"
                    android:textColor="@color/grey_color"
                    android:textSize="@dimen/text_size_16sp"
                    android:layout_marginTop="@dimen/text_size_57dp"
                    android:layout_marginBottom="@dimen/text_size_57dp" />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_outline_image_search_24"
                    android:layout_marginBottom="@dimen/text_size_18dp"
                    android:layout_gravity="center"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/lbl_please_wait"
                    android:textColor="@color/grey_color"
                    android:textSize="@dimen/text_size_14sp"
                    android:layout_marginBottom="@dimen/text_size_49dp"/>
                <utility.RobotoMedium
                    android:id="@+id/tvMatchingWithBankLbl"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/lbl_matching_your_details_with_bank"
                    android:textColor="@color/very_dark_blue"
                    android:textSize="@dimen/text_size_16sp"
                    android:layout_marginBottom="@dimen/text_size_45dp" />

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</RelativeLayout>