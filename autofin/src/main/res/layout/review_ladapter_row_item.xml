<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:layout_marginBottom="5dp">
<TextView
    android:id="@+id/tvReviewTitleLbl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/text_size_21dp"
    android:layout_marginTop="@dimen/text_size_21dp"
    android:textSize="@dimen/text_size_14sp"
    android:text="title"
    android:textColor="@color/autofin_grey_color"
    android:layout_marginBottom="4dp"/>

    <utility.RobotoMedium
        android:id="@+id/tvReviewValue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/text_size_21dp"
        android:layout_marginTop="@dimen/text_size_25dp"
        android:textSize="@dimen/text_size_16sp"
        android:textColor="@color/autofin_very_dark_blue"
        android:text=""
        android:layout_marginBottom="@dimen/text_size_20dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/autofin_grey_color"
        android:layout_marginBottom="@dimen/text_size_12dp"
        android:layout_marginLeft="9dp"
        android:layout_marginRight="9dp" />

    <utility.RobotoMedium
        android:id="@+id/tvReviewGivenValEdit"
        style="@style/edit_style"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_marginBottom="15dp"/>

</LinearLayout>